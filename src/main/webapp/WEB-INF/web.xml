<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Repair Agency</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>

    <context-param>
        <param-name>locales</param-name>
        <param-value>en ua</param-value>
    </context-param>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.formahei.web.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.formahei.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/controller</url-pattern>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.formahei.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>changeStatusOfUser viewUsers addUser viewRequests</param-value>
        </init-param>
        <init-param>
            <param-name>manager</param-name>
            <param-value>changeStatusOfUser requestProcessingByManager viewUsers viewRequests topUpAccount</param-value>
        </init-param>
        <init-param>
            <param-name>master</param-name>
            <param-value>requestProcessingByMaster viewFeedback viewRequests</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>goToFeedback createFeedback payForRequest topUpAccount register personalPage viewRequests createRequest</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>locale login logout register</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/errorPage.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errorPage.jsp</location>
    </error-page>

    <listener>
        <listener-class>com.formahei.web.listener.ContextListener</listener-class>
    </listener>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>false</el-ignored>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>

</web-app>
